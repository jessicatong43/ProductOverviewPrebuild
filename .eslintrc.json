{
  "extends": "airbnb",
  "ignorePatterns": ["main.js"],
  "env": {
    "browser": true,
    "node": true
  },
  "settings": {
    "import/extensions": [".js", ".jsx", ".ts", ".tsx"],
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {},
      "node": {
        "extensions": [".js", ".jsx", ".ts", ".tsx"]
      }
    },
    "rules": {
      "react/jsx-filename-extension": [1, { "allow": "as-needed" }]
    }
  }
}